<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../../templates/header") -%>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("../../templates/sidebar") -%> 

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include("../../templates/topbar") -%> 

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">UrlShortener</h1>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-xl-10 col-lg-12 col-md-9">
                            <div class="card o-hidden border-0 shadow-lg my-5">
                                <div class="card-body p-0">
                                    <div class="col-lg-50">
                                        <div class="p-5">
                                            <div class="text-center">
                                                <h1 class="h4 text-gray-900 mb-4">Short an URL !</h1>
                                            </div>
                                            <form class="user" action="/urls/shorturl" method="POST">
                                                <div class="form-group">
                                                    <input required type="url" placeholder="Enter an Url..." name="fullURL" id="fullURl" class="form-control form-control-user">
                                                </div>
                                                <button type="submit" class="btn btn-danger btn-user btn-block">SHORT</button>
                                                <hr>
                                                <% if (messages.full) { %>
                                                    <div class="card bg-success text-white shadow">
                                                        <div class="card-body">
                                                            <%= messages.message %>
                                                            <div>Full url : <a href="<%= messages.full %>"><%= messages.full %></a></div>
                                                            <div>Short url : <a href="<%= messages.short %>"><%= messages.short %></a></div>
                                                        </div>
                                                    </div>
                                                <% } else if (messages.error) { %>
                                                    <div class="card bg-danger text-white shadow">
                                                        <div class="card-body">
                                                            Error
                                                            <div class="text-white-50"><%= messages.error %></div>
                                                        </div>
                                                    </div>
                                                <% } %> 
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                
                </div>


            </div>
            <!-- End of Main Content -->

            <%- include("../../templates/footer") -%> 

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include("../../templates/scripts") -%>

</body>

</html>